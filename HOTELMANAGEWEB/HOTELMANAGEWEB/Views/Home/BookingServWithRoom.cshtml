@*@model HOTELMANAGEWEB.DTO.ServicesListModel*@
@using System.Globalization;

@{
    ViewBag.Title = "BookingServWithRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listServ = (List<HOTELMANAGEWEB.Models.Service>)ViewBag.ListServ;
}

<section class="home-slider owl-carousel">
    <div class="slider-item" style="background-image: url('../../Assets/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text align-items-end">
                <div class="col-md-10 col-sm-12 ftco-animate mb-4">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Booking</span></p>
                    <h1 class="mb-3">Booking Services</h1>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="ftco-section bg-light pt-5">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2>Our &amp; Services</h2>
            </div>
        </div>
        @{
            using (Html.BeginForm("ConfirmInfo", "Home" , FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="row">
                    <div class="col-md-12">
                        @Html.EditorForModel("BookingServWithRoom")
                    </div>
                    <div class="col-md-12">
                        <div class="float-right">
                            <p><button type="submit" class="btn btn-primary">Book</button></p>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</section>