@{
    var id = ViewBag.ID;
    var listserv = (List<HOTELMANAGEWEB.Models.Service>)ViewBag.ListServ;
}

<div class="modal fade" id="modal-xl-@id">
    <div class="modal-dialog modal-lg">
        @{
            using (Html.BeginForm("AddServtoBill", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Chọn dịch vụ</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Dịch vụ</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="ServicesID">
                                            @{
                                                foreach (var item in listserv)
                                                {
                                                    <option value="@item.ServicesID">@item.ServicesName - @Convert.ToDecimal(item.ServicesPrices).ToString("C0",System.Globalization.CultureInfo.CurrentCulture)/ @item.Unit </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label> Số lượng</label>
                                        <br />
                                        <input type="number" name="Quantity" min="1" class="form-control"/>
                                        <input type="hidden" value="@id" name="BillID" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-lg-end">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            }
        }

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>