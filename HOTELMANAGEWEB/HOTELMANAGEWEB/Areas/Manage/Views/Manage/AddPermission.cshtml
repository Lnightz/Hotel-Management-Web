
@{
    Layout = null;

    var id = ViewBag.ID;
    var listmodule = (List<HOTELMANAGEWEB.Models.AccountPermission>)ViewBag.ListModule;
    var allmodule = (List<HOTELMANAGEWEB.Models.ModuleList>)ViewBag.AllModule;

}

<div class="modal fade" id="modal-xl-permission-@id">
    <div class="modal-dialog modal-lg">
        @{
            using (Html.BeginForm("AddPermission", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Phân quyền</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Danh sách Module</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body p-0">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 10px">ID</th>
                                                        <th>Tên chức năng</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        foreach (var item in listmodule)
                                                        {
                                                            <tr>

                                                                <td>@item.ModuleID</td>
                                                                <td>@item.ModuleList.ModuleName</td>

                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group" data-select2-id="48">
                                        <label>Tên Module</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="ModuleID">
                                            @{
                                                foreach (var item in allmodule)
                                                {
                                                    <option value="@item.ModuleID">@item.ModuleName</option>
                                                }
                                            }
                                        </select>
                                        <input type="hidden" name="AccountID" value="@id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-lg-end">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            }
        }
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

