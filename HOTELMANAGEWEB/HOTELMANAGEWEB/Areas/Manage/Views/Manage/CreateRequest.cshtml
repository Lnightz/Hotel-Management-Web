
@{ 

    var listtype = (List<HOTELMANAGEWEB.Models.RequestType>)ViewBag.ListType;
    var listequip = (List<HOTELMANAGEWEB.Models.Equipment>)ViewBag.ListEquip;
}


<div class="modal fade" id="modal-xl-createrequest-1">
    <div class="modal-dialog modal-lg">
        @{ using (Html.BeginForm("CreateRequest", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Tạo phiếu đề xuất</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="">Tên người đề xuất</label>
                                        <input type="text" class="form-control" id="" name="RequesterName">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="">Giá tiền</label>
                                        <input type="text" class="form-control" name="Prices">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group" data-select2-id="48">
                                        <label>Thiết bị</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="EquipmentID">
                                            @{ foreach (var item in listequip)
                                                {
                                                    <option value="@item.EquipmentID">@item.EquipmentName</option>
                                                } }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group" data-select2-id="48">
                                        <label>Loại đề xuất</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="RequestTypeID">
                                            @{ foreach (var item in listtype)
                                                {
                                                    <option value="@item.RequestTypeID">@item.RequestTypeName</option>
                                                } }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="">Mô tả</label>
                                        <input type="text" class="form-control" name="RequestDescription">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-lg-end">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div> } }

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
