@using System.Globalization;
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";


    var newcus = ViewBag.NewCus;
    var maintenaceroom = ViewBag.MaintenanceRoom;
    var rentroom = ViewBag.RentRoom;
    var total = ViewBag.Total;
    var booking = ViewBag.Booking;
    var cancelbooking = ViewBag.CancelBooking;
    var totalserv = ViewBag.TotalServices;
    var totalroomrevenue = ViewBag.TotalRoom;

}




<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@booking</h3>

                <p>New Bookings</p>
            </div>
            <div class="icon">
                <i class="fas fa-plus-square"></i>
            </div>

        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@cancelbooking</h3>

                <p>Cancel Booking</p>
            </div>
            <div class="icon">
                <i class="fas fa-window-close"></i>
            </div>

        </div>
    </div>
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@rentroom</h3>

                <p>Rented Room</p>
            </div>
            <div class="icon">
                <i class="fas fa-bed"></i>
            </div>

        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@maintenaceroom</h3>

                <p>Maintenance Room</p>
            </div>
            <div class="icon">
                <i class="fas fa-tools"></i>
            </div>

        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@newcus</h3>

                <p>New Customer</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>

        </div>
    </div>
    <!-- ./col -->

    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@totalroomrevenue.ToString("C0", CultureInfo.CurrentCulture)</h3>

                <p>Total Room Revenue</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@totalserv.ToString("C0", CultureInfo.CurrentCulture)</h3>

                <p>Total Services Revenue</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@total.ToString("C0", CultureInfo.CurrentCulture)</h3>

                <p>Total Revenue</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
        </div>
    </div>


    <!-- ./col -->
</div>


<div class="card">
    <div class="card-header border-0">
        <div class="d-flex justify-content-between">
            <h3 class="card-title">Biểu đồ</h3>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <canvas id="roomrevenue-linechart"></canvas>
                </div>
                <div class="col-lg-6">
                    <canvas id="roomtype-piechart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


@section AddToHead{

    <script>
    var roomtypename = @Html.Raw(Json.Encode(ViewBag.PieChartRoomTypeName));

    var quantity = @Html.Raw(Json.Encode(ViewBag.PieChartQuantity));

    var day = @Html.Raw(Json.Encode(ViewBag.SalesChartDay));

    var totalroomvenue = @Html.Raw(Json.Encode(ViewBag.SalesChartRevenue));

    var LineChartData =
            {
                labels: [@Html.Raw(Json.Encode(ViewBag.SalesChartDay))],
                datasets: [{
                    label: 'Doanh thu',
                    backgroundColor: "rgba(75,192,192,0.4)",
                    borderWidth: 2,
                    data: totalroomvenue
                }]
            };

    var PieChartData = {
        labels: roomtypename,
                datasets: [{
                    label: 'Loại phòng',
                    backgroundColor: [
                        "#f990a7",
                        "#aad2ed",
                        "#9966FF",
                        "#99e5e5",
                        "#f7bd83",
                    ],
                    borderWidth: 2,
                    data: quantity
                }]
    };

        window.onload = function () {
            var ctx = document.getElementById("roomtype-piechart");
            window.mybar = new Chart(ctx, {
                type: 'pie',
                data: PieChartData,
                options:
                {
                    title:
                    {
                        display: true,
                        text: "Loại phòng"
                    },
                    responsive: true,
                    maintainAspectRatio: true
                }
            });
            var ctx1 = document.getElementById("roomrevenue-linechart");
            window.myBar1 = new Chart(ctx1,
                {
                    type: 'line',
                    data: LineChartData,
                    options:
                    {
                        title:
                        {
                            display: true,
                            text: "Doanh thu phòng theo ngày"
                        },
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            xAxes: [{
                                display: true,
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Month',
                                }
                            }],
                            yAxes: [{
                                display: true,
                                scaleLabel: {
                                    display: true,
                                    labelString: 'Value'
                                }
                            }]
                        }
                    }
                });
        }
    </script>
}

