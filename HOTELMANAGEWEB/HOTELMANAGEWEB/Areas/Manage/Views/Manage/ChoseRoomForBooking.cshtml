@{
    var id = ViewBag.BookingID;
    var listopenroom = (List<HOTELMANAGEWEB.Models.Room>)ViewBag.ListRoomOpen;
}

<div class="modal fade" id="modal-xl-choseroom-@id">
    <div class="modal-dialog modal-xl">
        @{
            using (Html.BeginForm("BookRoomChose", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Chọn phòng</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group" data-select2-id="48">
                                        <label>Số phòng</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="ServicesTypeID">
                                            @{
                                                foreach (var item in listopenroom)
                                                {
                                                    <option value="@item.RoomID">@item.RoomName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-lg-end">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            }
        }

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>