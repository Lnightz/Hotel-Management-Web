
@{
    var id = ViewBag.ServID;
    var listservtype = (List<HOTELMANAGEWEB.Models.ServicesType>)ViewBag.ListServType;
    var UserID = ViewBag.UserID;
    var serv = (HOTELMANAGEWEB.Models.Services)ViewBag.Services;
}
@{
    if (id == -1)
    {
        <div class="modal fade" id="modal-xl-@id">
            <div class="modal-dialog modal-xl">
                @{
                    using (Html.BeginForm("AddServ", "Manage", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Dịch vụ</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="ServicesName">Tên dịch vụ</label>
                                                <input type="text" class="form-control" id="ServicesName" placeholder="Tên dịch vụ" name="ServicesName">
                                            </div>
                                            <div class="form-group" data-select2-id="48">
                                                <label>Loại dịch vụ</label>
                                                <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                                    @{
                                                        foreach (var item in listservtype)
                                                        {
                                                            <option value="@item.ServicesTypeID" name="ServicesTypeID">@item.ServicesTypeName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="ServicesPrices">Giá</label>
                                                <input type="text" class="form-control" id="ServicesPrices" placeholder="Tên dịch vụ" name="ServicesPrices">
                                            </div>
                                            <div class="form-group">
                                                <label for="Unit">Đơn vị</label>
                                                <input type="text" class="form-control" id="Unit" placeholder="Tên dịch vụ" name="Unit">
                                            </div>
                                        </div>
                                        <div class="col-lg-12 d-flex justify-content-between">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" id="IsPay" value="" name="IsPay">
                                                <label for="IsPay" class="custom-control-label">Trả trước</label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" id="IsShowHomePage" value="" name="IsShowHomePage">
                                                <label for="IsShowHomePage" class="custom-control-label">Hiển thị trang chủ</label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" id="IsShow" value="" name="IsShow">
                                                <label for="IsShow" class="custom-control-label">Hiển thị</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div>
                                                <label for="ServicesName">Mô tả ngắn</label>
                                                <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesDescription"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div>
                                                <label for="ServicesName">Nội dung</label>
                                                <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesContent"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div>
                                                <label for="ServicesName">Chi tiết</label>
                                                <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesDetail"></textarea>
                                            </div>
                                        </div>
                                        <input type="hidden" name="CreatedUserID" value="@UserID" />
                                        <input type="hidden" name="DateCreated" value="@DateTime.Now" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer justify-content-lg-end">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    }
                }

                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    }
    else
    {
        <div class="modal fade" id="modal-xl-@id">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Dịch vụ</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="ServicesName">Tên dịch vụ</label>
                                        <input type="text" class="form-control" id="ServicesName" placeholder="Tên dịch vụ" value="@serv.ServicesName">
                                    </div>
                                    <div class="form-group" data-select2-id="48">
                                        <label>Loại dịch vụ</label>
                                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="ServicesTypeID">
                                            @{
                                                foreach (var item in listservtype)
                                                {
                                                    <option value="@item.ServicesTypeID">@item.ServicesTypeName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="ServicesPrices">Giá</label>
                                        <input type="text" class="form-control" id="ServicesPrices" placeholder="Tên dịch vụ" name="ServicesPrices" value="@serv.ServicesPrices">
                                    </div>
                                    <div class="form-group">
                                        <label for="Unit">Đơn vị</label>
                                        <input type="text" class="form-control" id="Unit" placeholder="Tên dịch vụ" name="Unit" value="@serv.Unit">
                                    </div>
                                </div>
                                <div class="col-lg-12 d-flex justify-content-between">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="IsPay" value="" name="IsPay">
                                        <label for="IsPay" class="custom-control-label">Trả trước</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="IsShowHomePage" value="" name="IsShowHomePage">
                                        <label for="IsShowHomePage" class="custom-control-label">Hiển thị trang chủ</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="IsShow" value="" name="IsShow">
                                        <label for="IsShow" class="custom-control-label">Hiển thị</label>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div>
                                        <label for="ServicesName">Mô tả ngắn</label>
                                        <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesDescription" >@serv.ServicesDescription</textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div>
                                        <label for="ServicesName">Nội dung</label>
                                        <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesContent">@serv.ServicesContent</textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div>
                                        <label for="ServicesName">Chi tiết</label>
                                        <textarea class="form-control" rows="3" placeholder="Enter ..." name="ServicesDetail">@serv.ServicesDetail</textarea>
                                    </div>
                                </div>
                                <input type="hidden" name="ModifyUserID" value="@UserID" />
                                <input type="hidden" name="DateModify" value="@DateTime.Now" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-lg-end">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    }
}



