@model IEnumerable<HOTELMANAGEWEB.Models.RoomType>


<div class="modal fade" id="modal-xl-createroom-1">
    <div class="modal-dialog modal-lg">
        @{ using (Html.BeginForm("CreateRoom", "Manage", FormMethod.Post))
                        {
            @Html.AntiForgeryToken();
<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Tạo phòng</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="RoomName">Tên phòng</label>
                        <input type="text" class="form-control" id="RoomName" placeholder="Tên phòng" name="RoomName">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="Min">Số người tối thiểu</label>
                        <input type="text" class="form-control" id="Min" placeholder="Số người tối thiểu" name="MinQuantity">
                    </div>
                    <div class="form-group">
                        <label for="Max">Số người tối đa</label>
                        <input type="text" class="form-control" id="max" placeholder="Số người tối đa" name="MaxQuantity">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group" data-select2-id="48">
                        <label>Loại phòng</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" name="RoomTypeID">
                            @{ foreach (var item in Model)
                                {
                                    <option value="@item.RoomTypeID">@item.RoomTypeName</option>
                                } }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-lg-end">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</div> } }

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
