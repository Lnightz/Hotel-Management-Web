@model IEnumerable<HOTELMANAGEWEB.Models.Equipment>

@{
    Layout = null;
}

<section class="content-header roboto-fonts">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6 d-flex">
                <h1 class="">Quản lý dụng cụ</h1>
                @{ if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary ml-3" })
                    }
                }
                <button data-toggle="modal" data-target="#modal-xl-createrequest-1" class="btn btn-primary ml-3">
                    <span>
                        <i class="fas fa-plus"></i>
                    </span> Tạo phiếu đề xuất
                </button>
                @{Html.RenderAction("CreateRequest","Manage"); }
            </div>
        </div>
    </div>
</section>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title roboto-fonts">Danh sách thiết bị</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EquipmentName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EquipPrices)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateBuy)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EquipStatus)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EquipmentType.EquipmentTypeName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Room.RoomName)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EquipmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EquipPrices)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateBuy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EquipStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Image)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EquipmentType.EquipmentTypeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Room.RoomName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.EquipmentID }, new { @class = "btn btn-warning btn-sm" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.EquipmentID }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>